<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<p><%= link_to "Edit article", edit_article_path(@article) %></p>

<p>
  <%= link_to "Delete #{@article.title}",
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</p>
<p><%= link_to "Go back to articles", articles_path() %></p>